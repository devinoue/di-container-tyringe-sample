{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "es6",
        "dom"
      ],
      "esModuleInterop": true,
      "rootDir": "./src",
      "outDir": "./out",
      "sourceMap": true,
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true ,
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      },
      "types": [
        "@types/node"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "**/*.spec.ts"
    ],
    "include": [
      "src/**/*"
    ]
  }